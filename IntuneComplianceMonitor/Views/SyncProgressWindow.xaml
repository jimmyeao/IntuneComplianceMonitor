<Window x:Class="IntuneComplianceMonitor.SyncProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Syncing with Intune" Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" 
        WindowStyle="None" 
        BorderThickness="1"
        BorderBrush="#0078D7">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Syncing with Intune..." HorizontalAlignment="Center" Margin="0,0,0,15"/>
            <ProgressBar IsIndeterminate="True" Height="5" Margin="0,0,0,15"/>
            <TextBlock Text="Please wait..." HorizontalAlignment="Center" Foreground="#777"/>
        </StackPanel>
    </Grid>
</Window>