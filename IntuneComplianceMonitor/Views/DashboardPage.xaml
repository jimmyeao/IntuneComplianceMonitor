<Page x:Class="IntuneComplianceMonitor.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      Title="Dashboard">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top metrics cards -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Devices Card -->
            <Border Grid.Column="0" Style="{StaticResource CardPanel}" Margin="5,5,10,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Total Devices" 
                               Style="{StaticResource SectionTitle}" 
                               HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="1" 
                               Text="{Binding TotalDevices}" 
                               Foreground="#0078D7" 
                               Style="{StaticResource StatNumber}"/>
                </Grid>
            </Border>

            <!-- Non-Compliant Devices Card -->
            <Border Grid.Column="1" Style="{StaticResource CardPanel}" Margin="5,5,10,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Non-Compliant Devices" 
                               Style="{StaticResource SectionTitle}" 
                               HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="1" 
                               Text="{Binding NonCompliantDevices}" 
                               Foreground="#E81123" 
                               Style="{StaticResource StatNumber}"/>
                </Grid>
            </Border>

            <!-- Not Checked In Devices Card -->
            <Border Grid.Column="2" Style="{StaticResource CardPanel}" Margin="5,5,10,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Not Checked in Recently" 
                               Style="{StaticResource SectionTitle}" 
                               HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="1" 
                               Text="{Binding DevicesNotCheckedInRecently}" 
                               Foreground="#F7630C" 
                               Style="{StaticResource StatNumber}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Charts section -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Devices by Type Chart -->
            <Border Grid.Column="0" Style="{StaticResource CardPanel}" Margin="5,5,10,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                           Text="Devices by Type" 
                           Style="{StaticResource SectionTitle}" 
                           HorizontalAlignment="Center"/>

                    <lvc:PieChart Grid.Row="1"
                             Series="{Binding DeviceTypesSeries}"
                             LegendPosition="Right"
                             Margin="10"/>
                </Grid>
            </Border>

            <!-- Devices by Ownership Chart -->
            <Border Grid.Column="1" Style="{StaticResource CardPanel}" Margin="5,5,10,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                           Text="Devices by Ownership" 
                           Style="{StaticResource SectionTitle}" 
                           HorizontalAlignment="Center"/>

                    <lvc:PieChart Grid.Row="1"
                             Series="{Binding OwnershipSeries}"
                             LegendPosition="Right"
                             Margin="10"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>