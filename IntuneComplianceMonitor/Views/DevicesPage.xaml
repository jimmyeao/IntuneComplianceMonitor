<!-- DevicesPage.xaml - Improved Layout -->
<Page x:Class="IntuneComplianceMonitor.Views.DevicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Devices">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filters Card -->
        <Border Grid.Row="0" Style="{StaticResource CardPanel}" Margin="5,5,5,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Device Filters" 
                           Style="{StaticResource SectionTitle}"/>

                <WrapPanel Grid.Row="1" Margin="0,10,0,0">
                    <!-- Search Box -->
                    <StackPanel Orientation="Vertical" Margin="0,0,20,10" Width="250">
                        <TextBlock Text="Search" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8,6" 
                                 BorderThickness="1" 
                                 BorderBrush="#BBBBBB">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <!-- Device Type Filter -->
                    <StackPanel Orientation="Vertical" Margin="0,0,20,10" Width="180">
                        <TextBlock Text="Device Type" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding DeviceTypes}" 
                                  SelectedItem="{Binding SelectedDeviceType}" 
                                  Padding="8,6" 
                                  BorderThickness="1" 
                                  BorderBrush="#BBBBBB">
                            <ComboBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>
                    </StackPanel>

                    <!-- Ownership Filter -->
                    <StackPanel Orientation="Vertical" Margin="0,0,20,10" Width="180">
                        <TextBlock Text="Ownership" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding OwnershipTypes}" 
                                  SelectedItem="{Binding SelectedOwnership}" 
                                  Padding="8,6" 
                                  BorderThickness="1" 
                                  BorderBrush="#BBBBBB">
                            <ComboBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>
                    </StackPanel>

                    <!-- Days Not Checked In Filter -->
                    <StackPanel Orientation="Vertical" Margin="0,0,20,10" Width="220">
                        <TextBlock Text="Days Not Checked In" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                                     Text="{Binding DaysNotCheckedIn, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="8,6" 
                                     BorderThickness="1" 
                                     BorderBrush="#BBBBBB">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <CheckBox Grid.Column="1" 
                                      Content="Filter" 
                                      IsChecked="{Binding FilterByNotCheckedIn}" 
                                      VerticalAlignment="Center" 
                                      Margin="10,0,0,0"/>
                        </Grid>
                    </StackPanel>

                    <!-- Apply Filters Button -->
                    <Button Content="Apply Filters" 
                            Command="{Binding ApplyFiltersCommand}" 
                            Style="{StaticResource ModernButton}" 
                            Margin="0,20,0,0" 
                            Width="120"/>
                </WrapPanel>
            </Grid>
        </Border>

        <!-- Devices Table -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="5,0,5,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Devices" 
                               Style="{StaticResource SectionTitle}"/>

                    <Button Grid.Column="1" 
                            Content="Export" 
                            Command="{Binding ExportCommand}" 
                            Style="{StaticResource ModernButton}" 
                            Width="100"/>
                </Grid>

                <DataGrid Grid.Row="1" 
                        x:Name="DevicesGrid"
                        ItemsSource="{Binding Devices}" 
                        MouseDoubleClick="DevicesGrid_MouseDoubleClick"
                        AutoGenerateColumns="False" 
                        IsReadOnly="True"
                        GridLinesVisibility="Horizontal"
                        BorderThickness="1"
                        BorderBrush="#DDDDDD"
                        RowHeaderWidth="0"
                        HeadersVisibility="Column"
                        CanUserSortColumns="True"
                        Background="Transparent"
                        AlternatingRowBackground="#F9F9F9">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#DDDDDD"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns >
                        <DataGridTextColumn Header="Device Name" Binding="{Binding DeviceName}" Width="200"/>
                        <DataGridTextColumn Header="Owner" Binding="{Binding Owner}" Width="240"/>
                        <DataGridTextColumn Header="Last Check-In" Binding="{Binding LastCheckInDisplay}" Width="140"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding DeviceType}" Width="100"/>
                        <DataGridTextColumn Header="OS Version" Binding="{Binding OSVersion}" Width="140"/>
                        <DataGridTextColumn Header="Compliance Issues" Binding="{Binding ComplianceIssuesList}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page>