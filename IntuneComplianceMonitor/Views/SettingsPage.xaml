<Page x:Class="IntuneComplianceMonitor.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Settings">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Settings Form -->
        <Border Grid.Row="0" Style="{StaticResource CardPanel}" Margin="5,5,5,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Application Settings" 
                           Style="{StaticResource SectionTitle}"/>

                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <!-- Device Data Settings -->
                    <GroupBox Header="Device Data Settings" Margin="0,0,0,15" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Days Not Checked In:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,15,0"/>

                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                <TextBox Text="{Binding DaysNotCheckedIn}" 
                                         Width="80" 
                                         VerticalAlignment="Center" 
                                         Padding="8,6" 
                                         Margin="0,5,10,5"/>

                                <TextBlock Text="days" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Active Devices Timeframe:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,15,0"/>

                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                <TextBox Text="{Binding ActiveDevicesTimeframe}" 
                                         Width="80" 
                                         VerticalAlignment="Center" 
                                         Padding="8,6" 
                                         Margin="0,5,10,5"/>

                                <TextBlock Text="days" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                       Text="Note: Only devices that have checked in within the 'Active Devices Timeframe' will be included in device counts and statistics." 
                                       TextWrapping="Wrap" 
                                       Margin="0,10,0,0" 
                                       Foreground="#666666" 
                                       FontStyle="Italic"/>
                        </Grid>
                    </GroupBox>

                    <!-- Auto Refresh Settings -->
                    <GroupBox Header="Auto Refresh Settings" Margin="0,0,0,15" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                                      Content="Enable Auto Refresh" 
                                      IsChecked="{Binding AutoRefreshEnabled}" 
                                      Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Refresh Interval:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,15,0"/>

                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                <TextBox Text="{Binding AutoRefreshInterval}" 
                                         Width="80" 
                                         VerticalAlignment="Center" 
                                         Padding="8,6" 
                                         Margin="0,5,10,5"
                                         IsEnabled="{Binding AutoRefreshEnabled}"/>

                                <TextBlock Text="minutes" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Last Sync Time:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,10,15,0"/>

                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding LastSyncTimeDisplay}" 
                                       VerticalAlignment="Center" 
                                       Margin="0,10,0,0"/>
                        </Grid>
                    </GroupBox>
                    <!-- Add this to your Settings Form -->
                    <GroupBox Header="Intune API Settings" Margin="0,0,0,15" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                   Text="Client ID:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,15,0"/>

                            <TextBox Grid.Row="0" Grid.Column="1" 
                 Text="{Binding IntuneClientId}" 
                 VerticalAlignment="Center" 
                 Padding="8,6" 
                 Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Tenant ID:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,15,0"/>

                            <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding IntuneTenantId}" 
                 VerticalAlignment="Center" 
                 Padding="8,6" 
                 Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Client Secret:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,15,0"/>

                            <PasswordBox Grid.Row="2" Grid.Column="1" 
                     x:Name="ClientSecretBox"
                     VerticalAlignment="Center" 
                     Padding="8,6" 
                     Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                   Text="Note: These settings are required to connect to the Microsoft Graph API for Intune. Client Secret is stored in encrypted form." 
                   TextWrapping="Wrap" 
                   Margin="0,10,0,0" 
                   Foreground="#666666" 
                   FontStyle="Italic"/>
                        </Grid>
                    </GroupBox>
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Reset to Defaults" 
                                Command="{Binding ResetToDefaultsCommand}" 
                                Padding="15,8" 
                                Margin="0,0,15,0" 
                                Width="150"
                                Background="#E6E6E6"
                                Foreground="#333333"
                                BorderThickness="1"
                                BorderBrush="#BBBBBB"/>

                        <Button Content="Save Settings" 
                                Command="{Binding SaveCommand}" 
                                Style="{StaticResource ModernButton}" 
                                Width="150"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Help Card -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="5,0,5,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Settings Information" 
                           Style="{StaticResource SectionTitle}"/>

                <TextBlock Grid.Row="1" 
                           TextWrapping="Wrap" 
                           Margin="0,10,0,0">
                    <Run Text="Days Not Checked In:" FontWeight="Bold"/>
                    <LineBreak/>
                    <Run Text="This setting determines how many days a device must not have checked in to be counted in the 'Not Checked in Recently' metric. The default is 7 days."/>
                    <LineBreak/>
                    <LineBreak/>
                    <Run Text="Active Devices Timeframe:" FontWeight="Bold"/>
                    <LineBreak/>
                    <Run Text="This setting determines the time window for considering devices as 'active' in all metrics and counts. Only devices that have checked in within this timeframe will be included in the dashboard statistics. The default is 30 days."/>
                    <LineBreak/>
                    <LineBreak/>
                    <Run Text="Auto Refresh:" FontWeight="Bold"/>
                    <LineBreak/>
                    <Run Text="When enabled, the dashboard will automatically refresh data at the specified interval. This can help ensure you're viewing the most current information."/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Page>