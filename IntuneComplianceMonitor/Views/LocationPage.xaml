<Page x:Class="IntuneComplianceMonitor.Views.LocationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:local="clr-namespace:IntuneComplianceMonitor.Views"
      xmlns:vm="clr-namespace:IntuneComplianceMonitor.ViewModels"
      Title="Device Locations">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Device Count by Country" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,20,0"/>
            <Button Content="Refresh" Click="Refresh_Click" Padding="10,5" Margin="10,0,0,0"/>
        </StackPanel>

        <lvc:GeoMap Grid.Row="1"
                    Series="{Binding MapSeries}"
                    />
    </Grid>
</Page>
