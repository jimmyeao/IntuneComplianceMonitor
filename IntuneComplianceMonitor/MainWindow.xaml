<Window x:Class="IntuneComplianceMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left sidebar with navigation -->
        <Border Grid.Column="0" Background="#0078D7">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- App title -->
                <TextBlock Grid.Row="0" 
                           Text="Intune Compliance Monitor" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="20,30,20,30"
                           TextWrapping="Wrap"/>

                <!-- Navigation buttons -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <Button Content="Dashboard" 
                            Tag="Dashboard" 
                            Style="{StaticResource NavButton}" 
                            Click="NavigationButton_Click"/>

                    <Button Content="All Devices" 
                            Tag="Devices" 
                            Style="{StaticResource NavButton}" 
                            Click="NavigationButton_Click"/>

                    

                    <Button Content="Not Checked In" 
                            Tag="NotCheckedIn" 
                            Style="{StaticResource NavButton}" 
                            Click="NavigationButton_Click"/>

                    <Button Content="Settings" 
                            Tag="Settings" 
                            Style="{StaticResource NavButton}" 
                            Click="NavigationButton_Click"/>
                    <StatusBar DockPanel.Dock="Bottom">
                        <StatusBarItem Content="{Binding TokenStatus}" />
                        <StatusBarItem Content="{Binding CurrentUser}" />
                        <StatusBarItem>
                            <Button Content="Logout" Command="{Binding LogoutCommand}" Click="Button_Click" />
                        </StatusBarItem>
                    </StatusBar>


                </StackPanel>

                <!-- Sync button at bottom -->
                <Button Grid.Row="2" 
                        Content="Sync from Intune" 
                        Style="{StaticResource ModernButton}" 
                        Margin="20,20,20,30" 
                        Click="SyncButton_Click"/>
            </Grid>
        </Border>

        <!-- Main content area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with title and refresh button -->
            <Grid Grid.Row="0" Margin="20,20,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Intune Compliance Dashboard" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1" 
                        Content="Refresh" 
                        Style="{StaticResource ModernButton}" 
                        Width="100" 
                        Click="RefreshButton_Click"/>
            </Grid>

            <!-- Main content frame -->
            <Frame Grid.Row="1" 
                   x:Name="MainFrame" 
                   NavigationUIVisibility="Hidden" 
                   Margin="10,0,10,10"/>

            <!-- Status bar -->
            <Border Grid.Row="2" 
                    Background="#F5F5F5" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="0,1,0,0">
                <Grid Margin="20,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               x:Name="StatusText" 
                               VerticalAlignment="Center"/>
                   
                    <ProgressBar Grid.Column="1" 
                                 x:Name="StatusProgress" 
                                 Width="100" 
                                 Height="10" 
                                 Margin="10,0,0,0" 
                                 IsIndeterminate="True" 
                                 Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>