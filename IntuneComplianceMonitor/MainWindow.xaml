<Window x:Class="IntuneComplianceMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntuneComplianceMonitor"
        mc:Ignorable="d"
        Title="Intune Compliance Monitor" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0063B1" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004E8C" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Grid Grid.Column="0" Background="#0078D7">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- App Title -->
                <StackPanel Grid.Row="0" Margin="15,20">
                    <TextBlock Text="Intune Compliance" Foreground="White" FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Monitor" Foreground="White" FontSize="22" FontWeight="Bold"/>
                </StackPanel>

                <!-- Navigation Menu -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <Button Content="Dashboard" Tag="Dashboard" Style="{StaticResource NavigationButtonStyle}" Click="NavigationButton_Click"/>
                    <Button Content="All Devices" Tag="Devices" Style="{StaticResource NavigationButtonStyle}" Click="NavigationButton_Click"/>
                    <Button Content="Non-Compliant Devices" Tag="NonCompliant" Style="{StaticResource NavigationButtonStyle}" Click="NavigationButton_Click"/>
                    <Button Content="Not Checked In" Tag="NotCheckedIn" Style="{StaticResource NavigationButtonStyle}" Click="NavigationButton_Click"/>
                    <Button Content="Settings" Tag="Settings" Style="{StaticResource NavigationButtonStyle}" Click="NavigationButton_Click"/>
                </StackPanel>

                <!-- Sync Button -->
                <Button Grid.Row="2" Content="Sync from Intune" Margin="15,20" Padding="0,10" Background="#005A9E" Foreground="White" BorderThickness="0" Click="SyncButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

            <!-- Content Frame -->
            <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Background="#F5F5F5"/>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="1" Height="26" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar x:Name="StatusProgress" Width="100" Height="14" IsIndeterminate="False" Visibility="Collapsed" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>