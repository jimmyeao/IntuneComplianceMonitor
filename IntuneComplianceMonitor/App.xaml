<Application x:Class="IntuneComplianceMonitor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Include the Dark Theme dictionary -->
                <ResourceDictionary Source="/IntuneComplianceMonitor;component/DarkTheme.xaml"/>
                <!-- Add the styles dictionary -->
                <ResourceDictionary Source="/IntuneComplianceMonitor;component/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>